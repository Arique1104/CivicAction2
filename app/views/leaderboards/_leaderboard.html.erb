<div id="<%= dom_id leaderboard %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= leaderboard.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Deadline:</strong>
    <%= leaderboard.deadline %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= leaderboard.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= leaderboard.end_date %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this leaderboard", leaderboard, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this leaderboard', edit_leaderboard_path(leaderboard), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
